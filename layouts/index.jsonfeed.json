{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{ .Site.Title }}",
     "home_page_url": "{{ .Permalink }}",
     "feed_url": "{{ .Permalink }}feed.json",
     "favicon": "{{ .Permalink }}static/favicon-180.png",
     "author": {
       "url": "{{ .Permalink }}",
       "name": "Juan Pinto"
     },
     "items": [ {{ range $index, $item := first 1 .Data.Pages }}{{if $index}}, {{end}}
        {
         "id": "{{ .Permalink }}",
         "title": "{{if isset .Params "Title" }}{{ .Title }}{{ else}}New microblog post{{ end }}",
         "url": "{{ if isset .Params "redirect" }}{{ .Params.redirect }}{{ else }}{{ .Permalink }}{{ end }}",
         "content_html": "{{ replace .Content "\n" "\\n" | replaceRE "\"" "\\\"" | replaceRE "\t" "\\t" | replaceRE "&quot;" "'" }}{{ if isset .Params "mf-in-reply-to" -}}<a class=\"u-in-reply-to\" href=\"{{ index (.Param "mf-in-reply-to") 0 }}\"></a>{{- end }}{{ .Content -}}{{- if isset .Params "mf-read-status" -}}<p class="p-summary"><data class="p-x-read-status" value="finished">ðŸ“š Finished reading</data> <span class="p-read-of h-cite"><cite class="p-name"><em>{{ .Param "mf-read-of.properties.name" }}</em></cite> by <span class="p-author">{{ .Param "mf-read-of.properties.author" }}</span>.{{- if isset (index .Params "mf-read-of").properties "uid" -}} (ISBN: <span class="p-uid">{{- substr (.Param "mf-read-of.properties.uid") 5 -}}</span>){{ end -}}</p>{{ end -}}{{- if isset .Params "mf-photo" -}}<div class="photos">{{- range (index .Params "mf-photo") }}<figure><img src="{{substr $.Site.BaseURL 0 -1}}{{ . }}" class="u-photo" /></figure>{{- end }}</div>{{- end }}",
         "date_published": "{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}",
         "date_modified": "{{ .Lastmod.Format "2006-01-02T15:04:05Z07:00" }}"
       }{{ end }}
     ]
  }
